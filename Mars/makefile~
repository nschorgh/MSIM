CC = gfortran
CFLAGS = -O3 -Wall
LFLAGS = -O3 -Wall

#CC = ifort
#C90 = ifort
#CFLAGS = -O3 -warn all  -warn notruncated_source
#C90FLAGS = -O3 -warn all
#LFLAGS = -O3 -warn all

SR = ~/Thermal/ThermalLibF/Common/

exper_thermal: exper_thermal1d.o makefile
	make -C $(SR) makefile
	$(CC) $(LFLAGS) exper_thermal1d.o $(SR)conductionT.o $(SR)tridag.o \
	$(SR)vapordiffusioni.o $(SR)psv.o $(SR)grids.o 

mars_thermal: mars_thermal1d.o marsorbit.o makefile
	make -C $(SR) makefile
	$(CC) $(LFLAGS) mars_thermal1d.o $(SR)julday.o marsorbit.o \
	$(SR)flux.o $(SR)conductionQ.o $(SR)tridag.o $(SR)conductionT.o \
	$(SR)grids.o $(SR)psv.o 

mars_mapt2: mars_mapt2.o jsub.o marsorbit.o makefile
	make -C $(SR) makefile
	$(CC) $(LFLAGS) mars_mapt2.o jsub.o $(SR)julday.o marsorbit.o \
	$(SR)flux.o $(SR)conductionQ.o $(SR)tridag.o $(SR)conductionT.o \
	$(SR)grids.o $(SR)psv.o $(SR)psvco2.o

mars_mapi: mars_mapi.o marsorbit.o jsub.o makefile
	make -C $(SR) makefile
	$(CC) $(LFLAGS) mars_mapi.o $(SR)julday.o marsorbit.o \
	$(SR)flux.o $(SR)conductionQ.o $(SR)tridag.o $(SR)conductionT.o \
	$(SR)grids.o $(SR)psv.o jsub.o $(SR)psvco2.o 

mars_mapiqh2v: mars_mapiqh2v.o jsubv.o marsorbit.o makefile
	make -C $(SR) makefile
	$(CC) $(LFLAGS) mars_mapiqh2v.o jsubv.o $(SR)julday.o marsorbit.o \
	$(SR)flux.o $(SR)conductionQ.o $(SR)tridag.o $(SR)conductionT.o \
	$(SR)grids.o $(SR)psv.o 

stabgrow_fast: fast_modules.o fast_subs_exper.o stabgrow_fast.o \
	fast_subs_univ.o  makefile        
	make -C $(SR) makefile
	$(CC) $(LFLAGS) stabgrow_fast.o fast_subs_univ.o fast_subs_exper.o \
	$(SR)tridag.o $(SR)conductionT.o $(SR)grids.o $(SR)psv.o \
	$(SR)derivs.o -o $@

exper_fast: fast_modules.o exper_fast.o fast_subs_univ.o fast_subs_exper.o \
	makefile
	make -C $(SR) makefile
	$(CC) $(LFLAGS) exper_fast.o $(SR)tridag.o $(SR)conductionT.o \
	$(SR)grids.o $(SR)psv.o $(SR)derivs.o fast_subs_univ.o \
	fast_subs_exper.o -o $@

mars_fast: fast_modules.o mars_fast.o fast_subs_univ.o fast_subs_mars.o \
	makefile
	make -C $(SR) makefile
	$(CC) $(LFLAGS) mars_fast.o $(SR)tridag.o $(SR)conductionT.o \
	$(SR)grids.o $(SR)psv.o $(SR)derivs.o fast_subs_univ.o \
	$(SR)flux.o $(SR)conductionQ.o $(SR)psvco2.o $(SR)generalorbit.o \
	fast_subs_mars.o -o $@

%.o:	%.f makefile
	$(CC) $(CFLAGS) -c $<

%.o:	%.for makefile
	$(CC) $(CFLAGS) -c $<

%.o:	%.f90 makefile
	$(CC) $(CFLAGS) -c $< 


.PHONY: clean 

clean:
	rm -f  *.o  a.out  *.o90  *.mod \
	exper_fast mars_fast stabgrow_fast



